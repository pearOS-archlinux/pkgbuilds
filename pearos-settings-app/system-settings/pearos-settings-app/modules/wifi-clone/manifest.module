__main
name: "Wi-Fi Clone"
description: "Wireless network management - cloned as a module"
developer: "Pear Software and Services"
website: "https://pear-software.com"

__item
label: "Wi-Fi Clone"
icon: "./assets/cs-network.svg"
page-id: "wifi-clone-page"

__page
id: "wifi-clone-page"

settings-card {
    card-section-image {
        image: "./assets/cs-network.svg" alt: "Wi-Fi"
        title: "Wi-Fi"
        description: "Set up Wi-Fi to wirelessly connect your computer to the internet. Turn on Wi-Fi, then choose a network to join."
        toggle wifi-clone-toggle checked
            on-change: "handleWifiToggle"
    }
    divider wifi-clone-divider
        style: "display: none;"
    card-section wifi-clone-connected-section
        style: "display: none;"
        label: "Network Name"
        button wifi-clone-details-button
            "Details..."
}

section-title: "Known networks"

settings-card {
    card-section wifi-clone-known-network-section
        style: "display: none;"
        network-item
            ssid: "Network Name"
            ssid-id: "wifi-clone-known-network-ssid"
    card-section wifi-clone-no-network-section
        text: "No known networks"
}

section-title: "Other Networks"

settings-card {
    card-section-vertical wifi-clone-networks-list {
        text: "Scanning for networks..."
    }
}

