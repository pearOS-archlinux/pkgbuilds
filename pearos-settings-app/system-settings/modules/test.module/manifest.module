__main
name: "Developer Settings"
description: "Manage developer settings and hidden options"
developer: "Pear Software and Services"
website: "https://pear-software.com"

__item
label: "Developer Settings"
icon: "./assets/cs-online-accounts.svg"
page-id: "test-page"

__page
id: "test-page"

section-title: "Developer Options"

settings-card {
    card-section {
        label: "Enable Developer Mode"
        toggle test-dev-mode checked
            on-change: "handleDevModeToggle"
    }
    divider
    card-section {
        label: "Logging Level"
        select test-log-level
        option: "debug|Debug" selected
        option: "info|Info"
        option: "warn|Warning"
        option: "error|Error"
        on-change: "handleLogLevelChange"
    }
    divider
    card-section {
        label: "Experimental Features"
        toggle test-experimental
    }
}

section-title: "Advanced Configuration"

settings-card {
    card-section-vertical {
        label: "API Endpoints"
        radio-group
            name: "api-endpoint"
            radio: "production|Production" checked
            radio: "staging|Staging"
            radio: "development|Development"
    }
    divider
    card-section {
        label: "API Key"
        input test-api-key placeholder: "Enter API key"
    }
    divider
    card-section {
        label: "Reset Configuration"
        button test-reset-button delete
            "Reset All Settings"
            on-click: "handleResetButton"
    }
}

settings-card {
    card-section-image {
        icon: "./assets/preferences-desktop-online-accounts.svg"
        title: "Developer Tools"
        description: "Access advanced developer tools and debugging features"
    }
    divider
    card-section {
        label: "Enable Debug Console"
        toggle test-debug-console
    }
}

settings-card {
    card-section-info {
        info: "These settings are intended for developers only. Changing them may affect system stability. [Learn more](https://pear-software.com/dev-settings)"
    }
}

section-title: "Advanced Settings"

settings-card {
    card-section {
        label: "Advanced Configuration"
        button test-advanced-button
            "Go to Advanced Settings"
            on-click: "navigateToAdvancedPage"
    }
}

__page
id: "test-advanced-page"

section-title: "Advanced Settings"

settings-card {
    card-section-image {
        icon: "./assets/preferences-desktop-online-accounts.svg"
        title: "Advanced Configuration"
        description: "This is a test page with some example settings and options"
    }
    divider
    card-section {
        label: "Feature Flag 1"
        toggle test-feature-flag-1
    }
    divider
    card-section {
        label: "Feature Flag 2"
        toggle test-feature-flag-2 checked
    }
}

section-title: "Test Options"

settings-card {
    card-section {
        label: "Test Option A"
        toggle test-option-a
    }
    divider
    card-section {
        label: "Test Option B"
        toggle test-option-b
    }
    divider
    card-section {
        label: "Test Value"
        select test-value-select
        option: "option1|Option 1"
        option: "option2|Option 2" selected
        option: "option3|Option 3"
    }
}

settings-card {
    card-section {
        label: "Back to Main Settings"
        button test-back-button
            "Back"
            on-click: "navigateToMainPage"
    }
}
