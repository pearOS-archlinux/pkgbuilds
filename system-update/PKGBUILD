# Maintainer : Alexandru Balan <alex@pearos.xyz>

pkgname=system-update
_realname=system-update
pkgdesc="pearOS System Update application that notifies you when a new pearOS update is coming"
pkgver=22.01
pkgrel=1
arch=('any')
license=('custom')
source=('system-update' 'system-update.glade' 'internal-pext-logo.png' 'pext-installer.png')

package() {
  sudo mkdir -p /usr/share/pext-installer/data/media
  sudo chown -R $USER:$USER /usr/share/pext-installer
  install -m755 system-update  /usr/share/pext-installer/
  install -m755 system-update.glade /usr/share/pext-installer/
  install -m755 internal-pext-logo.png /usr/share/pext-installer/data/media/
  install -m755 pext-installer.png /usr/share/pext-installer/data/media/
}
sha256sums=('b620359a02de095233ff09597e5fa11305182c68f39b04493ed386c43b7f69d2'
