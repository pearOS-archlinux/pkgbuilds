# Maintainer : Alexandru Balan <alex@pear-software.com>

pkgname=system-overview
_realname=pearos-about
pkgdesc="pearOS NiceC0re System Overview application"
pkgver=25.11.29
pkgrel=1
arch=('any')
url="https://pearos.xyz"
license=('GPLv3')
source=("file://${startdir}/license.txt")
sha256sums=('SKIP')
prepare() {
  cp -r ${startdir}/${_realname} ${srcdir}/
}
build() {
  cd ${srcdir}/${_realname}
}

package() {
  cd ${srcdir}/${_realname}

  # Instalează pearos-about în /usr/share/extras/pearos-about
  install -d ${pkgdir}/usr/share/extras
  cp -r ${srcdir}/${_realname} ${pkgdir}/usr/share/extras/
  
  # Instalează launch.sh în /usr/bin/system-overview cu permisiuni executabile
  install -d ${pkgdir}/usr/bin
  install -m755 launch.sh ${pkgdir}/usr/bin/system-overview
  
  install -Dm644 ${srcdir}/license.txt ${pkgdir}/usr/share/licenses/system-overview/license.txt
}
